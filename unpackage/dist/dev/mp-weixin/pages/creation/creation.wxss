@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}

.creation-container {
	flex: 1;
	background-color: #ffffff;
}

/* 顶部标题 */
.header {
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 30rpx;
	border-bottom: 1rpx solid #e0e0e0;
}
.page-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #000000;
}

/* 主要内容 */
.main-content {
	flex: 1;
	padding: 30rpx;
}
.content {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 400rpx;
}
.welcome-text {
	font-size: 32rpx;
	color: #666666;
}
