@import "../../../uvue.wxss";
:host{display:flex;flex-direction:column}

.upgrade-container {
	flex: 1;
	background-color: #fff;
	padding: 24rpx;
}
.benefits-section,
.plans-section,
.payment-section {
	background-color: #fff;
	border: 1rpx solid #e0e0e0;
	border-radius: 6rpx;
	padding: 24rpx;
	margin-bottom: 20rpx;
	box-shadow: none;
}
.benefits-header {
	text-align: left;
	margin-bottom: 24rpx;
}
.benefits-title {
	font-size: 32rpx;
	font-weight: 500;
	color: #222;
	display: block;
	margin-bottom: 6rpx;
}
.benefits-subtitle {
	font-size: 24rpx;
	color: #888;
}
.benefits-list {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}
.benefit-item {
	display: flex;
	align-items: center;
	gap: 12rpx;
}
.benefit-icon {
	font-size: 22rpx;
	color: #222;
	background: none;
	border-radius: 0;
	width: auto;
	height: auto;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: 400;
}
.benefit-text {
	font-size: 26rpx;
	color: #222;
	line-height: 1.4;
}
.section-title {
	font-size: 28rpx;
	font-weight: 500;
	color: #222;
	margin-bottom: 16rpx;
	display: block;
}
.plans-list,
.payment-list {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}
.plan-item {
	border: 1rpx solid #e0e0e0;
	border-radius: 6rpx;
	padding: 20rpx;
	background: #fff;
	transition: none;
	cursor: pointer;
}
.plan-item.active {
	border-color: #222;
	background: #f5f5f5;
}
.plan-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10rpx;
}
.plan-name {
	font-size: 28rpx;
	font-weight: 500;
	color: #222;
}
.plan-tag {
	display: none;
}
.plan-price {
	display: flex;
	align-items: baseline;
	margin-bottom: 6rpx;
}
.price-symbol {
	font-size: 22rpx;
	color: #222;
	font-weight: 400;
}
.price-number {
	font-size: 32rpx;
	font-weight: 500;
	color: #222;
}
.price-unit {
	font-size: 20rpx;
	color: #888;
	margin-left: 2rpx;
}
.plan-original {
	font-size: 20rpx;
	color: #bbb;
	text-decoration: line-through;
	margin-bottom: 6rpx;
	display: block;
}
.plan-desc {
	font-size: 22rpx;
	color: #888;
	line-height: 1.4;
}
.payment-item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	border: 1rpx solid #e0e0e0;
	border-radius: 6rpx;
	background: #fff;
	transition: none;
	cursor: pointer;
}
.payment-item.active {
	border-color: #222;
	background: #f5f5f5;
}
.payment-icon {
	font-size: 28rpx;
	margin-right: 12rpx;
	flex-shrink: 0;
	color: #222;
	background: none;
}
.payment-name {
	font-size: 24rpx;
	color: #222;
	flex: 1;
}
.payment-check {
	width: 24rpx;
	height: 24rpx;
	background: none;
	color: #222;
	border-radius: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 18rpx;
	font-weight: 400;
	flex-shrink: 0;
}
.bottom-placeholder {
	height: 100rpx;
}
.bottom-section {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: #fff;
	padding: 18rpx 24rpx;
	border-top: 1rpx solid #e0e0e0;
	display: flex;
	align-items: center;
	justify-content: space-between;
	box-shadow: none;
	z-index: 1000;
}
.price-summary {
	display: flex;
	align-items: baseline;
}
.summary-text {
	font-size: 22rpx;
	color: #222;
}
.summary-price {
	font-size: 28rpx;
	font-weight: 500;
	color: #222;
	margin-left: 4rpx;
}
.pay-btn {
	background: #222;
	color: #fff;
	border: none;
	border-radius: 6rpx;
	padding: 12rpx 36rpx;
	font-size: 24rpx;
	font-weight: 500;
	box-shadow: none;
	transition: none;
}
.pay-btn:active {
	transform: none;
	box-shadow: none;
}
.plans-list-horizontal {
	width: 100%;
	white-space: nowrap;
	overflow-x: auto;
	padding-bottom: 8rpx;
}
.plans-list-horizontal-inner {
	display: flex;
	flex-direction: row;
	gap: 16rpx;
}
.plan-item {
	min-width: 220rpx;
	max-width: 260rpx;
	flex: 0 0 auto;
}
@media (max-width: 750rpx) {
.upgrade-container {
		padding: 12rpx;
}
.benefits-section,
	.plans-section,
	.payment-section {
		padding: 12rpx;
}
.plan-item,
	.payment-item {
		padding: 10rpx;
}
.price-number {
		font-size: 26rpx;
}
.pay-btn {
		padding: 10rpx 24rpx;
		font-size: 20rpx;
}
}
